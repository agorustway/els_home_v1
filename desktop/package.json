{
  "name": "els-container-history-desktop",
  "version": "1.0.0",
  "description": "ELS 컨테이너 이력조회 데스크탑 앱 (Windows)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "cd renderer && npm run build",
    "build": "npm run build:renderer && electron-builder",
    "dist": "npm run build:renderer && electron-builder --win",
    "postinstall": "cd renderer && npm install"
  },
  "build": {
    "appId": "com.els.container-history",
    "productName": "ELS 컨테이너 이력조회",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "renderer-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../elsbot",
        "to": "elsbot",
        "filter": ["**/*.py", "**/*.json"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
